{
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            2,
            2
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "no-console": [
          0
        ],
        "quotes": [
            2,
            "single"
        ],
        "semi": [
            2,
            "always"
        ]
    },
    "globals": {
        "Promise": true,
        "sinon": true,
        "describe": true,
        "beforeEach": true,
        "before": true,
        "after": true,
        "it": true
    }
}
